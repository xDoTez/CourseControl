<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/subcategory_background">

    <TextView
        android:id="@+id/subcategoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#1D2830"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/subcategoryPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#1D2830"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/subcategoryRequirements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#1D2830"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/subcategoryUserPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#1D2830"
        android:paddingBottom="8dp"/>

</LinearLayout>
