<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="445dp"
        android:layout_height="875dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
            android:id="@+id/WelcomeMessage"
            android:layout_width="290dp"
            android:layout_height="81dp"
            android:text="Welcome to"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.078" />

        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="289dp"
            android:layout_height="74dp"
            android:text="Courses"
            android:textSize="64sp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.216"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.566" />

    <ImageView
        android:id="@+id/borderCourses"
        android:layout_width="442dp"
        android:layout_height="557dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeMessage"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/border_courses" />

        <ImageView
            android:id="@+id/imgMyCourses"
            android:layout_width="107dp"
            android:layout_height="98dp"
            android:background="@drawable/rounded_border_courses_page"
            app:layout_constraintBottom_toTopOf="@+id/imgMyHistory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/borderCourses"
            app:layout_constraintVertical_bias="0.483"
            app:srcCompat="@drawable/mycourses" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="232dp"
            android:layout_height="37dp"
            android:layout_marginTop="58dp"
            android:layout_marginBottom="429dp"
            android:text="My Courses"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="@+id/borderCourses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintStart_toEndOf="@+id/imgMyCourses"
            app:layout_constraintTop_toTopOf="@+id/borderCourses"
            app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgMyHistory"
        android:layout_width="107dp"
        android:layout_height="98dp"
        android:layout_marginTop="218dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/rounded_border_courses_page"
        app:layout_constraintBottom_toTopOf="@+id/imgAddCourse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/borderCourses"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/history" />

        <TextView
            android:id="@+id/myHistory"
            android:layout_width="232dp"
            android:layout_height="37dp"
            android:layout_marginTop="157dp"
            android:layout_marginBottom="272dp"
            android:text="Course History"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="@+id/borderCourses"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.29"
            app:layout_constraintStart_toEndOf="@+id/imgMyHistory"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imgAddCourse"
            android:layout_width="107dp"
            android:layout_height="98dp"
            android:layout_marginTop="368dp"
            android:background="@drawable/rounded_border_courses_page"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/borderCourses"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/addnew" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="232dp"
            android:layout_height="37dp"
            android:layout_marginStart="122dp"
            android:text="Add Courses"
            android:textColor="@color/white"
            android:textSize="26sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintStart_toStartOf="@+id/imgAddCourse"
            app:layout_constraintTop_toBottomOf="@+id/myHistory"
            app:layout_constraintVertical_bias="0.489" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:itemIconTint="@color/white"
            app:itemTextColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.998"
            app:menu="@menu/fragment_navbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>